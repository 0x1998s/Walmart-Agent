# 🛒 沃尔玛AI Agent平台环境配置示例
# Walmart AI Agent Platform Environment Configuration Example

# ===== 基础配置 =====
APP_NAME="沃尔玛AI Agent平台"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8080

# ===== 安全配置 =====
SECRET_KEY=your-super-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== 数据库配置 =====
DATABASE_URL=postgresql://walmart_admin:walmart_secure_2024@postgres:5432/walmart_ai_agent
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# ===== Redis配置 =====
REDIS_URL=redis://:walmart_redis_2024@redis:6379/0
REDIS_POOL_SIZE=10

# ===== 向量数据库配置 =====
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_AUTH_USER=admin
CHROMA_AUTH_PASSWORD=walmart_chroma_2024

# ===== AI模型配置 =====
# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview

# ChatGLM配置
CHATGLM_API_KEY=your_chatglm_api_key_here
CHATGLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
CHATGLM_MODEL=glm-4

# DeepSeek配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# ===== Dify配置 =====
DIFY_API_URL=http://dify:8001
DIFY_API_KEY=your_dify_api_key_here
DIFY_APP_TOKEN=your_dify_app_token_here

# ===== 文件存储配置 =====
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=.pdf,.docx,.xlsx,.pptx,.txt,.csv,.json

# ===== Celery配置 =====
CELERY_BROKER_URL=redis://:walmart_redis_2024@redis:6379/1
CELERY_RESULT_BACKEND=redis://:walmart_redis_2024@redis:6379/2

# ===== 监控配置 =====
PROMETHEUS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here

# ===== 业务配置 =====
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_CONTEXT_LENGTH=4000
SIMILARITY_THRESHOLD=0.7

# ===== 允许的主机列表 =====
ALLOWED_HOSTS=["*"]

# ===== 前端配置 =====
REACT_APP_API_BASE_URL=http://localhost:8080/api/v1
REACT_APP_WS_URL=ws://localhost:8080/ws
REACT_APP_ENVIRONMENT=production
